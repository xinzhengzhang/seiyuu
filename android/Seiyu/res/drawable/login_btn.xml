<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#6787C4" />

            <stroke android:width="1dp" android:color="#6787C4" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#6787C4" android:startColor="#6787C4" />

            <stroke android:width="1dp" android:color="#6787C4" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>